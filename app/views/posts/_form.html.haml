- form_for @post do |f|
  = f.error_messages
  %p
    = f.label :draft
    %br
    = f.check_box :draft
  %p
    = f.label :published
    %br
    = f.date_select :published
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :content
    %br
    = f.text_area :content
  %p
    = f.submit "Submit"
